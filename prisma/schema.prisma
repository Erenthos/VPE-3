// -----------------------------
// DATABASE CONFIG
// -----------------------------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// -----------------------------
// MODELS
// -----------------------------

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

// -------------------------------------
// VENDOR MASTER
// -------------------------------------
model Vendor {
  id        String   @id @default(cuid())
  name      String
  company   String?
  email     String?
  createdAt DateTime @default(now())

  ratings   Rating[]    // all ratings for this vendor
}

// -------------------------------------
// SEGMENTS (each has multiple questions)
// -------------------------------------
model Segment {
  id        String     @id @default(cuid())
  name      String
  weight    Int        @default(1)

  questions Question[]
}

// -------------------------------------
// QUESTIONS (each belongs to a segment)
// -------------------------------------
model Question {
  id        String    @id @default(cuid())
  text      String

  segment   Segment   @relation(fields: [segmentId], references: [id])
  segmentId String

  ratings   Rating[]  // back relation
}

// -------------------------------------
// GLOBAL RATINGS (shared among users)
// -------------------------------------
model Rating {
  id         String    @id @default(cuid())

  vendor     Vendor    @relation(fields: [vendorId], references: [id])
  vendorId   String

  question   Question  @relation(fields: [questionId], references: [id])
  questionId String

  score      Int       @default(0)
  comment    String?   @default("")

  updatedAt  DateTime  @updatedAt

  // Unique rating per vendor per question
  @@unique([vendorId, questionId], name: "unique_vendor_question")
}
