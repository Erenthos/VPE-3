// --------------------------------------------------------
// DATABASE CONFIG
// --------------------------------------------------------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --------------------------------------------------------
// MODELS
// --------------------------------------------------------

// USERS
model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  // Back relation: Users who evaluated vendors
  evaluatedVendors Vendor[] @relation("VendorEvaluatedBy")
}

// --------------------------------------------------------
// VENDOR MASTER
// --------------------------------------------------------
model Vendor {
  id        String   @id @default(cuid())
  name      String
  company   String?
  email     String?
  createdAt DateTime @default(now())

  // Evaluated by user (FK must come before relation)
  lastEvaluatedById String?
  lastEvaluatedBy   User? @relation("VendorEvaluatedBy", fields: [lastEvaluatedById], references: [id])

  lastEvaluatedAt   DateTime?

  ratings   Rating[]
}

// --------------------------------------------------------
// SEGMENTS
// --------------------------------------------------------
model Segment {
  id        String     @id @default(cuid())
  name      String
  weight    Int        @default(1)

  questions Question[]
}

// --------------------------------------------------------
// QUESTIONS
// --------------------------------------------------------
model Question {
  id        String    @id @default(cuid())
  text      String

  segment   Segment   @relation(fields: [segmentId], references: [id])
  segmentId String

  ratings   Rating[]
}

// --------------------------------------------------------
// RATINGS (GLOBAL â€” shared for all users)
// --------------------------------------------------------
model Rating {
  id         String    @id @default(cuid())

  vendorId   String
  vendor     Vendor    @relation(fields: [vendorId], references: [id])

  questionId String
  question   Question  @relation(fields: [questionId], references: [id])

  score      Int       @default(0)
  comment    String?   @default("")
  updatedAt  DateTime  @updatedAt

  // One rating per vendor per question
  @@unique([vendorId, questionId])
}
