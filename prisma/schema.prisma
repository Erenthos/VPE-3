// ---------- Datasource (Neon PostgreSQL) ----------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- Generator ----------
generator client {
  provider = "prisma-client-js"
}

// ---------- Models ----------

// Users of the system (no roles)
model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  ratings   Rating[]
}

// Vendors that users can rate
model Vendor {
  id        String   @id @default(cuid())
  name      String
  company   String?
  email     String?
  createdAt DateTime @default(now())
  ratings   Rating[]
}

// Segments like: Quality, Delivery, Communication
model Segment {
  id        String     @id @default(cuid())
  name      String
  weight    Int        @default(1)
  questions Question[]
}

// Each segment contains questions
model Question {
  id        String   @id @default(cuid())
  text      String
  segment   Segment  @relation(fields: [segmentId], references: [id])
  segmentId String
}

// Stores rating + comment per user per vendor per question
model Rating {
  id         String    @id @default(cuid())
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  vendor     Vendor    @relation(fields: [vendorId], references: [id])
  vendorId   String
  question   Question  @relation(fields: [questionId], references: [id])
  questionId String
  score      Int       @default(0)
  comment    String?   @default("")
  updatedAt  DateTime  @updatedAt

  @@unique([userId, vendorId, questionId], name: "unique_rating_entry")
}

